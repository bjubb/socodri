<div id="toolbar" class="sc-navbar navbar-fixed">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#{{viewName}}-toolbar-options">
                Menu
                <i class="fa fa-fw fa-bars"></i>
            </button>
        </div>

        <div class="navbar-collapse collapse" id="{{viewName}}-toolbar-options">
            <span><a href="/">DR Insights</a></span>
            {{#if funnel}}
            <span class="toolbar-second-name">| <a href="/{{funnel.slug}}/">{{ funnel.name }}</a></span>
            {{/if}}
            {{#if context}}
            <span class="toolbar-second-name">| {{ context }}</span>
            {{/if}}
        </div>
    </div>
</div>
