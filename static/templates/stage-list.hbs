{{#each stages}}
  <div class="panel sc-panel">
      <div class="sc-card-header">
          <div class="sc-card-details">
              <div class="col-md-12">
                  <h2 class="card-heading"><a href="/funnel/{{funnel.slug}}/stage/{{id}}">{{name}}</a></h2>
              </div>
              <div class="col-md-3">
                  <div class="sc-card-label">
                      Total {{name}}s
                  </div>
                  <div class="sc-card-value">
                      {{formatNumber  insights.conversions }} <small>({{percentOf insights.conversions ../funnel.insights.conversions }}%) </small>
                  </div>
              </div>
              <div class="col-md-3">
                  <div class="sc-card-label">
                      Cost Per {{name}}
                  </div>
                  <div class="sc-card-value">
                      {{ costPer insights.conversions insights.spend }}
                  </div>
              </div>
              <div class="clearfix"></div>
          </div>
      </div>
  </div>
{{/each}}
