<div class="detail panel sc-panel">
    <div class="panel-heading" class="detail panel sc-panel">
        <h3 class="panel-title">Summary</h3>
        {{#if editable}}
            <a href="#" id="edit-details">edit</a>
        {{/if}}
    </div>

    <ul class="list-group sc-sidebar-list">
        <li class="list-group-item">
            <div class="sc-list-item-label clearfix">
                Spend
            </div>
            <div class="sc-list-item-value">
                {{formatMoney funnel.insights.spend}}
            </div>
        </li>
        <li class="list-group-item">
            <div class="sc-list-item-label clearfix">
                {{ funnel.conversion_name }}s
            </div>
            <div class="sc-list-item-value">
                {{formatNumber funnel.insights.conversions}}
            </div>
        </li>
        <li class="list-group-item">
            <div class="sc-list-item-label clearfix">
                Cost Per {{ funnel.conversion_name }}
            </div>
            <div class="sc-list-item-value">
                {{costPer funnel.insights.conversions funnel.insights.spend}}
            </div>
        </li>
        <li class="list-group-item">
            <div class="sc-list-item-label clearfix">
                {{ funnel.conversion_name }} Rate
            </div>
            <div class="sc-list-item-value">
                {{ percentOf funnel.insights.conversions funnel.insights.impressions 3 }}%
            </div>
        </li>
        <!--li class="list-group-item">
            <div class="sc-list-item-label clearfix">
                Revenue
            </div>
            <div class="sc-list-item-value">
                {{formatMoney funnel.insights.conversion_revenue}}
            </div>
        </li>
        <li class="list-group-item">
            <div class="sc-list-item-label clearfix">
                ROAS
            </div>
            <div class="sc-list-item-value">
                {{roas funnel.insights.spend funnel.insights.conversion_revenue }}
            </div>
        </li-->
    </ul>
</div>
